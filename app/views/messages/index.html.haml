.content
  = render 'groups/sidebar'
  .content__right
    .content__right__top
      .content__right__top--left
        %p= @group.name
        .member Memberï¼š
        .members
          - @group.users.each do |user|
            = user.name
      .content__right__top--edit-btn
        = link_to "EDIT", edit_group_path(@group), class: "square_btn"
    .content__right__under
      .content__right__under__message
        - @messages.each do |message|
          .name
            = message.user.name
          .time
            = message.created_at.strftime("%Y/%m/%d %H:%M")
          %p= message.body
          - if message.image.present?
            .image
              = image_tag message.image

    .content__right__under--send-btn
      = form_for [@group,@message] do |f|
        = f.text_field :body, placeholder: "type a message", class: "message_form"
        = f.label :image do
          %i.fa.fa-image
        = f.file_field :image, class: "fileInput", style: "display:none;"
        = f.submit value: "SEND" , class: "square_btn"
