%haml
  %head
    %link{:rel => "stylesheet", :href => "./font-awesome-4.7.0/css/font-awesome.min.css"}
  %body
    .content
      .left-content
        .top-space
          = link_to do
            %i.fa.fa-gear.fa-lg
          = link_to do
            %i.fa.fa-edit.fa-lg
          %p ユーザ名
        .under-space
          %p Group名
          %span メッセージ
      .right-content
        .top-space2
          .top-left-content
            %p Group名
            %pre Members: seo tanaka
          .editbtn
            %a{:href => "" , :class => "square_btn"}EDIT
        .under-space2
          .under-content
            %span seo　timestamp
            %p こんにちわ
        .send-space
          %p{:class => "message_form"}
            = form_for (@messages) do |f|
              = f.text_field :body, placeholder: "type a message", class: "text_field"
              = f.label :image do
                %i.fa.fa-image
              = f.submit value: "SEND" , class: "square_btn"

            / %form{:method => "post", :label => "image"}
            /   %input{:type => "text" , :label => "image" , :size => "120" , :class => "text_area"}
            /   %i.fa.fa-image.o.fa-lg
            /   %input{:type => "submit", :value => "SEND", :label => "image", :class => "square_btn"}


