- @messages.each do |message|
  .name
    = message.user.name
  .time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.body.present? and message.image.nil?
    .body
      = message.body
  - elsif message.body.nil? and message.image.present?
    .image
      = image_tag message.image
  - else
    .else-body
      = message.body
    .else-image
      = image_tag message.image

