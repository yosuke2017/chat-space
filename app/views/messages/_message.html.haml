.content__right__under__message__header
  .content__right__under__message__header__name{id: "message_count"}
    = message.user.name
  .content__right__under__message__header__time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.content__right__under__message__content{ "data-message-id": message.id }
  = content_tag :div, message.body, class: "content__right__under__message__content-text" if message.body.present?
  = image_tag message.image if message.image.present?

